doctype html
html

  head
    title= title
    link(rel='stylesheet', href='/css/styles.css')
    script(src='/javascripts/jquery-3.4.1.min.js')
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/social-network.js')
    script(src='https://kit.fontawesome.com/852217884c.js' crossorigin='anonymous')

  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.fixed-top.border-bottom
      a.navbar-brand(href='/') Social Network
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon

      .collapse.navbar-collapse(id='navbarSupportedContent')
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/') Home
          li.nav-item
            a.nav-link(href=`/user/${myUsername}`) Profile

        //- Search bar

        form.form-inline.my-2.my-lg-0(action='/search', id='search-form', method='get')
          .input-group

            .input-group-prepend
              button.btn.btn-outline-secondary.dropdown-toggle.i.fas.fa-cog(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              .dropdown-menu#dropdown
                a.dropdown-item(href='#')
                  .custom-control.custom-checkbox
                    input#checkbox4.custom-control-input(type='checkbox', name='followingsOnly')
                    label.custom-control-label(for='checkbox4') Followings Only

            input.form-control(type='search', placeholder='Search', aria-label='Search', name='search')
            .input-group-append
              button.btn.btn-success.my-2.my-sm-0(type='submit') Go!

    block content
