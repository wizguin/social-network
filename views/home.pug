extends layout

block content
  #sidebar.border-right

    .container.float-left.mb-3
      .avatar-md.float-left.mr-3
        if user.avatar
          img(src=`/images/avatar/${user.avatar}.webp`)
        else
          img(src='/images/avatar/default.webp')

      .h5.mt-3.mb-2 @#{user.username}
      button.btn.btn-primary.mt-2(type='button') Settings

    .container.float-left
      .h4.float-left New Post
      .form-group
        label(for='exampleFormControlTextarea1')
        textarea#exampleFormControlTextarea1.form-control(rows='5')
        button.btn.btn-primary.mr-1.mt-1(type='button') Image
        button.btn.btn-primary.mt-1(type='button') Post

