extends layout

block content

  .settings-container
    h1 Settings

    form.mt-4(action='/settings/update-password', method='post')
      h5 Change Password
      .form-group
        input.form-control(type='password', placeholder='New Password', name='username')
      .form-group
        input.form-control(type='password', placeholder='Repeat New Password', name='passwordRepeat')
      button.btn.btn-primary.btn-lg(type='submit') Update Password

    form.mt-4(action='/settings/update-email', method='post')
      h5 Change Email Address
      .form-group
        input.form-control(type='email', aria-describedby='emailHelp', placeholder='New Email Address', name='email')
      button.btn.btn-primary.btn-lg(type='submit') Update Email Address

    form.mt-4(action='/settings/update-profile', method='post')
      h5 Change Avatar
      .form-group
        input#profileAvatar.form-control-file(type='file')
      button.btn.btn-primary.btn-lg(type='submit') Update Avatar

    form.mt-4(action='/settings/update-profile', method='post')
      h5 Change Header
      .form-group
        input#profileHeader.form-control-file(type='file')
      button.btn.btn-primary.btn-lg(type='submit') Update Header

    form.mt-4(action='/settings/update-profile', method='post')
      h5 Change Bio
      .form-group
        textarea#profileBio.form-control(rows='3', placeholder='Bio')
      button.btn.btn-primary.btn-lg(type='submit') Update Bio
