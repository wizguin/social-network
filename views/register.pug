include mixins/alerts

doctype html
html

  head
    title= title
    link(rel='stylesheet', href='/css/styles.css')
    script(src='/javascripts/jquery-3.4.1.min.js')
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/social-network.js')

  body
    .login-container
      h1 Sign Up
      form.mt-4(action='/register', method='post', id='register-form')
        .form-group
          input.form-control(type='text', placeholder='Username', name='username')
        .form-group
          input.form-control(type='email', aria-describedby='emailHelp', placeholder='Email Address', name='email')
        .form-group
          input.form-control(type='password', placeholder='Password', name='password')
        .form-group
          input.form-control(type='password', placeholder='Repeat Password', name='passwordRepeat')
        button.btn.btn-primary.btn-lg(type='submit') Sign Up
        a(href='login') Already have an account? Log in.

    +alertsContainer()
